<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/txt_gray</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- layout style -->
    <style name="layout_mm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="layout_ww">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layout_wm">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="layout_mw">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layout_0w">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="layout_0m">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="layout_m0">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- split line style -->
    <style name="vertical_splite_line">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_gray_f5</item>
    </style>

    <style name="splite_line_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/color_gray_f5</item>
    </style>

    <style name="splite_line_gray_8">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:background">@color/color_gray_f0</item>
    </style>

    <style name="splite_line_gray_4">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:background">@color/color_gray_f5</item>
    </style>

    <style name="space_vertical" parent="layout_0m">
        <item name="android:background">@color/color_transparent</item>
    </style>

    <style name="space_horizontal" parent="layout_m0">
        <item name="android:background">@color/color_transparent</item>
    </style>
    <!-- searchview style -->
    <style name="search_view">
        <item name="android:background">@drawable/round_rect_white</item>
        <item name="android:drawableLeft">@drawable/nav_search</item>
        <item name="android:padding">@dimen/margin_normal</item>
        <item name="android:drawablePadding">@dimen/margin_normal</item>
        <item name="android:textColor">@color/txt_gray_light</item>
        <item name="android:textColorHint">@color/txt_gray_light</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <!-- tab button style -->
    <style name="tab_button" parent="layout_ww">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/color_transparent</item>
        <item name="android:textSize">@dimen/text_size_10</item>
        <item name="android:textColor">@color/txt_blue_gray</item>
    </style>

    <style name="top_tab_button" parent="layout_0m">
        <item name="android:background">@color/color_transparent</item>
        <item name="android:textColor">@color/txt_orange_gray</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/margin_small</item>
    </style>

    <style name="person_tab_button" parent="layout_0m">
        <item name="android:background">@drawable/btn_person_tab</item>
        <item name="android:textColor">@color/txt_black_gray</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/margin_small</item>
    </style>

    <!-- blue prefix in row -->
    <style name="blue_prefix">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">4dp</item>
        <item name="android:layout_height">@dimen/row_height_smaller</item>
        <item name="android:background">@drawable/round_rect_blue_gradient_vertical</item>
    </style>

    <style name="blue_prefix_large">
        <item name="android:layout_width">4dp</item>
        <item name="android:layout_height">@dimen/Image_message</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/round_rect_blue_gradient_vertical</item>
    </style>

    <style name="row_normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/row_height_normal</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/txt_gray</item>
        <item name="android:paddingLeft">@dimen/margin_normal</item>
        <item name="android:paddingRight">@dimen/margin_normal</item>
    </style>

    <!--badge style-->
    <style name="badge_style" parent="layout_ww">
        <item name="android:paddingLeft">@dimen/margin_small</item>
        <item name="android:paddingRight">@dimen/margin_small</item>
        <item name="android:background">@drawable/round_red</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_10</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:layout_height">@dimen/row_height_tiny</item>
        <item name="android:minWidth">@dimen/row_height_tiny</item>
    </style>

</resources>
