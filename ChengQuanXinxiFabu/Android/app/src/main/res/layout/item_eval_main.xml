<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:padding="@dimen/margin_normal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/image_avatar_height"
            android:layout_height="@dimen/image_avatar_height">
            <ImageView
                android:id="@+id/img_avatar"
                android:layout_width="@dimen/image_avatar_height"
                android:layout_height="@dimen/image_avatar_height"
                android:background="@drawable/no_image"/>
            <TextView
                android:id="@+id/txt_item_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_orange_gradient"
                android:gravity="center"
                android:padding="@dimen/margin_tiny"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_10"
                android:text="@string/str_enterprise"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <LinearLayout
            style="@style/layout_0w"
            android:layout_marginLeft="@dimen/margin_normal"
            android:orientation="vertical">

            <LinearLayout
                style="@style/layout_mw"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_name"
                    style="@style/layout_ww"
                    android:text="@string/app_name"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/txt_gray"/>
                <Button
                    android:id="@+id/btn_state"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="@dimen/margin_small"
                    android:background="@drawable/round_rect_bg_no_border_blue"
                    android:textColor="@color/color_main_blue"
                    android:textSize="@dimen/text_size_12"
                    android:text="互联网"/>
            </LinearLayout>

            <LinearLayout
                style="@style/layout_mw"
                android:layout_marginTop="@dimen/margin_normal_below"
                android:orientation="horizontal">
                <TextView
                    style="@style/layout_ww"
                    android:text="@string/str_chengxin_id"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/txt_gray"/>
                <TextView
                    android:id="@+id/txt_chengxin_id"
                    style="@style/layout_ww"
                    android:layout_marginStart="@dimen/margin_small"
                    android:text="@string/str_sample"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/txt_gray"/>
            </LinearLayout>

            <LinearLayout
                style="@style/layout_mw"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="horizontal">
                <LinearLayout
                    style="@style/layout_ww"
                    android:orientation="horizontal" >
                    <TextView
                        style="@style/layout_ww"
                        android:padding="@dimen/margin_small"
                        android:text="@string/str_chengxin_rate"
                        android:textSize="@dimen/text_size_10"
                        android:textColor="@color/txt_gray"/>
                    <TextView
                        android:id="@+id/txt_chengxin_rate"
                        style="@style/layout_ww"
                        android:text="@string/str_sample"
                        android:textSize="@dimen/text_size_10"
                        android:textColor="@color/color_main_blue"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/layout_0w"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:orientation="horizontal" >
                    <TextView
                        style="@style/layout_ww"
                        android:padding="@dimen/margin_small"
                        android:text="@string/str_eval_count"
                        android:textSize="@dimen/text_size_10"
                        android:textColor="@color/txt_gray"/>
                    <TextView
                        android:id="@+id/txt_eval_count"
                        style="@style/layout_ww"
                        android:text="@string/str_sample"
                        android:textSize="@dimen/text_size_10"
                        android:textColor="@color/color_main_blue"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/layout_mw"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="horizontal">
                <LinearLayout
                    style="@style/layout_ww"
                    android:orientation="horizontal" >
                    <TextView
                        style="@style/layout_ww"
                        android:padding="@dimen/margin_small"
                        android:text="@string/front_eval"
                        android:textSize="@dimen/text_size_10"
                        android:textColor="@color/txt_gray_light"/>
                    <TextView
                        android:id="@+id/txt_front_eval"
                        style="@style/layout_ww"
                        android:text="@string/str_sample"
                        android:textSize="@dimen/text_size_10"
                        android:textColor="@color/txt_gray_light"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/layout_0w"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:orientation="horizontal" >
                    <TextView
                        style="@style/layout_ww"
                        android:padding="@dimen/margin_small"
                        android:text="@string/back_eval"
                        android:textSize="@dimen/text_size_10"
                        android:textColor="@color/txt_gray_light"/>
                    <TextView
                        android:id="@+id/txt_back_eval"
                        style="@style/layout_ww"
                        android:text="@string/str_sample"
                        android:textSize="@dimen/text_size_10"
                        android:textColor="@color/txt_gray_light"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>


