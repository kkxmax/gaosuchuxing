<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white">

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/topbar_height"
        layout="@layout/nav_bar" />

    <LinearLayout
        style="@style/layout_mw"
        android:padding="@dimen/margin_normal"
        android:background="@drawable/rect_blue_gradient"
        android:orientation="vertical">
        <LinearLayout
            style="@style/layout_mw"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/image_avatar_height"
                android:layout_height="@dimen/image_avatar_height">
                <ImageView
                    android:id="@+id/img_avatar"
                    style="@style/layout_mm"
                    android:background="@drawable/no_image"/>
                <TextView
                    android:id="@+id/txt_item_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_orange_gradient"
                    android:gravity="center"
                    android:padding="@dimen/margin_tiny"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/text_size_10"
                    android:text="@string/str_enterprise"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <LinearLayout
                style="@style/layout_0w"
                android:layout_marginLeft="@dimen/margin_normal"
                android:orientation="vertical">
                <LinearLayout
                    style="@style/layout_mw"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_name"
                        style="@style/layout_ww"
                        android:text="@string/app_name"
                        android:textSize="@dimen/text_size_16"
                        android:textColor="@color/color_white"/>
                    <Button
                        android:id="@+id/btn_state"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="@dimen/margin_normal"
                        android:background="@drawable/round_rect_bg_no_border_white"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/text_size_12"
                        android:text="互联网"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/layout_mw"
                    android:layout_marginTop="@dimen/margin_normal_below"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/layout_ww"
                        android:text="@string/str_chengxin_id"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/color_white"/>
                    <TextView
                        android:id="@+id/txt_chengxin_id"
                        style="@style/layout_ww"
                        android:layout_marginStart="@dimen/margin_normal"
                        android:text="@string/str_sample"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/color_white"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View style="@style/splite_line_gray"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginBottom="@dimen/margin_normal"/>
        <LinearLayout
            style="@style/layout_mw"
            android:orientation="horizontal">
            <LinearLayout
                style="@style/layout_0w"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    style="@style/layout_ww"
                    android:padding="@dimen/margin_small"
                    android:text="@string/str_chengxin_rate"
                    android:textSize="@dimen/text_size_10"
                    android:textColor="@color/color_white"/>
                <TextView
                    android:id="@+id/txt_chengxin_rate"
                    style="@style/layout_ww"
                    android:text="@string/str_sample"
                    android:textSize="@dimen/text_size_10"
                    android:textColor="@color/color_white"/>
            </LinearLayout>
            <LinearLayout
                style="@style/layout_0w"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    style="@style/layout_ww"
                    android:padding="@dimen/margin_small"
                    android:text="@string/str_like_count"
                    android:textSize="@dimen/text_size_10"
                    android:textColor="@color/color_white"/>
                <TextView
                    android:id="@+id/txt_like_count"
                    style="@style/layout_ww"
                    android:text="@string/str_sample"
                    android:textSize="@dimen/text_size_10"
                    android:textColor="@color/color_white"/>
            </LinearLayout>
            <LinearLayout
                style="@style/layout_0w"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    style="@style/layout_ww"
                    android:padding="@dimen/margin_small"
                    android:text="@string/str_eval_count"
                    android:textSize="@dimen/text_size_10"
                    android:textColor="@color/color_white"/>
                <TextView
                    android:id="@+id/txt_eval_count"
                    style="@style/layout_ww"
                    android:text="@string/str_sample"
                    android:textSize="@dimen/text_size_10"
                    android:textColor="@color/color_white"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        style="@style/layout_m0">

        <ScrollView
            style="@style/layout_mm">

            <LinearLayout
                style="@style/layout_mw"
                android:orientation="vertical">

                <View style="@style/splite_line_gray_8"/>

                <LinearLayout
                    style="@style/layout_mw"
                    android:paddingTop="@dimen/margin_normal_below"
                    android:paddingBottom="@dimen/margin_normal_below"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <View style="@style/blue_prefix" />
                    <TextView
                        style="@style/layout_0w"
                        android:layout_marginStart="@dimen/margin_normal"
                        android:textColor="@color/txt_gray"
                        android:text="@string/person_consent"/>
                </LinearLayout>

                <View style="@style/splite_line_gray"/>
                <TextView
                    android:id="@+id/txt_person_consent"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/row_height_normal"
                    android:paddingLeft="@dimen/margin_normal_most"
                    android:gravity="center_vertical"
                    android:textColor="@color/txt_dark"
                    android:text="@string/str_sample"/>

                <View style="@style/splite_line_gray_8"/>

                <LinearLayout
                    style="@style/layout_mw"
                    android:paddingTop="@dimen/margin_normal_below"
                    android:paddingBottom="@dimen/margin_normal_below"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <View style="@style/blue_prefix" />
                    <TextView
                        style="@style/layout_0w"
                        android:layout_marginStart="@dimen/margin_normal"
                        android:textColor="@color/txt_gray"
                        android:text="@string/enterprise_news"/>
                </LinearLayout>

                <View style="@style/splite_line_gray"/>

                <TextView
                    android:id="@+id/txt_enterprise_news"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/row_height_normal"
                    android:paddingLeft="@dimen/margin_normal_most"
                    android:gravity="center_vertical"
                    android:textColor="@color/txt_dark"
                    android:text="@string/str_sample"/>

                <LinearLayout
                    android:id="@+id/display_scrollview"
                    style="@style/layout_mw"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/margin_normal_most"
                    android:paddingRight="@dimen/margin_normal_most">

                    <View style="@style/splite_line_gray"/>

                    <RelativeLayout
                        style="@style/layout_mw"
                        android:layout_height="@dimen/row_height_normal"
                        android:gravity="center_vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/layout_ww"
                                android:textColor="@color/txt_gray_light"
                                android:text="@string/enterprise_net"/>

                            <TextView
                                android:id="@+id/txt_enterprise_net"
                                style="@style/layout_0w"
                                android:lines="1"
                                android:layout_marginLeft="@dimen/margin_small"
                                android:text="@string/str_sample"
                                android:textColor="@color/color_main_blue"/>
                        </LinearLayout>

                        <ImageButton
                            android:layout_width="@dimen/margin_large_bellow"
                            android:layout_height="@dimen/margin_large"
                            android:src="@drawable/more"
                            android:background="@color/color_transparent"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>

                    <View style="@style/splite_line_gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/row_height_normal"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/layout_ww"
                            android:textColor="@color/txt_gray_light"
                            android:text="@string/business"/>

                        <TextView
                            android:id="@+id/txt_business"
                            style="@style/layout_0w"
                            android:lines="1"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:textColor="@color/txt_dark"
                            android:text="@string/str_sample"/>
                    </LinearLayout>

                    <View style="@style/splite_line_gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/row_height_normal"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/layout_ww"
                            android:textColor="@color/txt_gray_light"
                            android:text="@string/weixin"
                            android:id="@+id/textView" />

                        <TextView
                            android:id="@+id/txt_weixin"
                            style="@style/layout_0w"
                            android:lines="1"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:textColor="@color/txt_dark"
                            android:text="@string/str_sample"/>

                    </LinearLayout>

                    <View style="@style/splite_line_gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/row_height_normal"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/layout_ww"
                            android:textColor="@color/txt_gray_light"
                            android:text="@string/responsibly_person_name"/>


                        <TextView
                            android:id="@+id/txt_responsibly_person_name"
                            style="@style/layout_0w"
                            android:lines="1"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:textColor="@color/txt_dark"
                            android:text="@string/str_sample"/>

                    </LinearLayout>

                    <View style="@style/splite_line_gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/row_height_normal"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/layout_ww"
                            android:textColor="@color/txt_gray_light"
                            android:text="@string/person_position"/>

                        <TextView
                            android:id="@+id/txt_person_position"
                            style="@style/layout_0w"
                            android:lines="1"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:textColor="@color/txt_dark"
                            android:text="@string/str_sample"/>

                    </LinearLayout>

                    <View style="@style/splite_line_gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/row_height_normal"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/layout_ww"
                            android:textColor="@color/txt_gray_light"
                            android:text="@string/personal_phonenum"/>

                        <TextView
                            android:id="@+id/txt_person_phonenumber"
                            style="@style/layout_0w"
                            android:lines="1"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:textColor="@color/txt_dark"
                            android:text="@string/str_sample"/>

                    </LinearLayout>

                    <View style="@style/splite_line_gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/row_height_normal"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/layout_ww"
                            android:textColor="@color/txt_gray_light"
                            android:text="@string/personal_weixin_num"/>

                        <TextView
                            android:id="@+id/txt_person_weixin"
                            style="@style/layout_0w"
                            android:lines="1"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:textColor="@color/txt_dark"
                            android:text="@string/str_sample"/>

                    </LinearLayout>

                    <View style="@style/splite_line_gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/row_height_normal"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/layout_ww"
                            android:textColor="@color/txt_gray_light"
                            android:text="@string/office_place"/>

                        <TextView
                            android:id="@+id/txt_office_place"
                            style="@style/layout_0w"
                            android:lines="1"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:textColor="@color/txt_dark"
                            android:text="@string/str_sample"/>

                    </LinearLayout>

                    <View style="@style/splite_line_gray" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/row_height_normal"
                        android:gravity="center_vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/layout_ww"
                                android:textColor="@color/txt_gray_light"
                                android:text="@string/recommend"/>

                            <TextView
                                android:id="@+id/txt_recommend"
                                style="@style/layout_0w"
                                android:lines="1"
                                android:layout_marginLeft="@dimen/margin_small"
                                android:text="@string/str_sample"
                                android:textColor="@color/color_main_blue"/>

                        </LinearLayout>

                        <ImageButton
                            android:layout_width="@dimen/margin_large_bellow"
                            android:layout_height="@dimen/margin_large"
                            android:src="@drawable/more"
                            android:background="@color/color_transparent"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>

                    <View style="@style/splite_line_gray" />

                    <LinearLayout
                        style="@style/layout_wm"
                        android:paddingTop="@dimen/margin_normal"
                        android:paddingRight="@dimen/margin_normal"
                        android:paddingBottom="@dimen/margin_normal">

                        <TextView
                            style="@style/layout_wm"
                            android:textColor="@color/txt_gray_light"
                            android:text="@string/business_cert"/>

                        <ImageView
                            android:id="@+id/img_business_cert1"
                            android:layout_width="120dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="@dimen/margin_normal"
                            android:background="@color/color_gray_f0" />

                        <ImageView
                            android:id="@+id/img_business_cert2"
                            android:layout_width="120dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="@dimen/margin_normal"
                            android:background="@color/color_gray_f0" />

                    </LinearLayout>

                    <View style="@style/splite_line_gray" />

                </LinearLayout>

                <LinearLayout
                    style="@style/layout_wm"
                    android:padding="@dimen/margin_normal"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_arrow_up"
                        android:layout_width="@dimen/image_hot_item_width"
                        android:layout_height="@dimen/margin_large_more"
                        android:drawableLeft="@drawable/arrow_up"
                        android:text="@string/arrow_up"
                        android:background="@color/color_transparent"/>

                </LinearLayout>

                <View style="@style/splite_line_gray_8"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/top_tab_height"
                    android:orientation="horizontal">
                    <ToggleButton
                        android:id="@+id/btn_eval"
                        style="@style/person_tab_button"
                        android:checked="true"
                        android:textOn="@string/tab_eval"
                        android:textOff="@string/tab_eval"/>
                    <ToggleButton
                        android:id="@+id/btn_comedity"
                        style="@style/person_tab_button"
                        android:textOn="@string/comedity"
                        android:textOff="@string/comedity"/>
                    <ToggleButton
                        android:id="@+id/btn_item"
                        style="@style/person_tab_button"
                        android:textOn="@string/item"
                        android:textOff="@string/item"/>
                    <ToggleButton
                        android:id="@+id/btn_serve"
                        style="@style/person_tab_button"
                        android:textOn="@string/str_serve"
                        android:textOff="@string/str_serve"/>
                </LinearLayout>

                <View style="@style/splite_line_gray" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/comedity_detail_image_height"/>

            </LinearLayout>

        </ScrollView>

        <ImageButton
            style="@style/layout_ww"
            android:src="@drawable/call"
            android:background="@color/color_transparent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_marginBottom="@dimen/margin_large"/>

    </RelativeLayout>

    <LinearLayout
        style="@style/layout_mw"
        android:orientation="vertical">

        <View style="@style/splite_line_gray"/>

        <LinearLayout
            style="@style/layout_mw"
            android:orientation="horizontal"
            android:padding="@dimen/margin_normal">

            <EditText
                android:id="@+id/edit_search"
                style="@style/layout_0w"
                android:layout_marginEnd="@dimen/margin_normal_top"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:background="@drawable/round_gray_white"
                android:drawableLeft="@drawable/icon_input"
                android:padding="@dimen/margin_normal"
                android:drawablePadding="@dimen/margin_normal"
                android:textColor="@color/txt_gray"
                android:textColorHint="@color/txt_gray_light"
                android:textSize="@dimen/text_size_14"
                android:hint="@string/think" />

            <Button
                android:id="@+id/btn_follow"
                android:layout_width="60dp"
                android:layout_height="@dimen/margin_extra"
                android:background="@drawable/btn_follow"
                android:text="@string/str_follow"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/txt_gray_white"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
