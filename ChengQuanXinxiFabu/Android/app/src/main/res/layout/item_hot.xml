<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:padding="@dimen/margin_normal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_item_title"
        style="@style/layout_mw"
        android:text="@string/str_sample_eval"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold"
        android:lines="1"
        android:textColor="@color/txt_dark"/>

    <TextView
        android:id="@+id/txt_descript"
        style="@style/layout_mw"
        android:layout_marginTop="@dimen/margin_normal"
        android:lines="3"
        android:text="@string/str_sample_item"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/txt_gray"/>

    <LinearLayout
        style="@style/layout_mw"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginBottom="@dimen/margin_normal"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_item_1"
            style="@style/layout_0w"
            android:layout_height="@dimen/image_hot_item_width"
            android:background="@drawable/no_image"/>
        <ImageView
            android:id="@+id/img_item_2"
            style="@style/layout_0w"
            android:layout_height="@dimen/image_hot_item_width"
            android:layout_marginLeft="@dimen/margin_normal"
            android:background="@drawable/no_image"/>
        <ImageView
            android:id="@+id/img_item_3"
            style="@style/layout_0w"
            android:layout_height="@dimen/image_hot_item_width"
            android:layout_marginLeft="@dimen/margin_normal"
            android:background="@drawable/no_image"/>
    </LinearLayout>

    <LinearLayout
        style="@style/layout_mw"
        android:orientation="horizontal">
        <LinearLayout
            style="@style/layout_0w"
            android:orientation="horizontal" >
            <TextView
                style="@style/layout_ww"
                android:padding="@dimen/margin_small"
                android:text="@string/str_read_count"
                android:textSize="@dimen/text_size_10"
                android:textColor="@color/txt_gray_light"/>
            <TextView
                android:id="@+id/txt_read_count"
                style="@style/layout_ww"
                android:text="@string/str_sample"
                android:textSize="@dimen/text_size_10"
                android:textColor="@color/color_main_blue"/>
        </LinearLayout>
        <LinearLayout
            style="@style/layout_0w"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                style="@style/layout_ww"
                android:padding="@dimen/margin_small"
                android:text="@string/str_eval_count"
                android:textSize="@dimen/text_size_10"
                android:textColor="@color/txt_gray_light"/>
            <TextView
                android:id="@+id/txt_eval_count"
                style="@style/layout_ww"
                android:text="@string/str_sample"
                android:textSize="@dimen/text_size_10"
                android:textColor="@color/color_main_blue"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_time"
            style="@style/layout_0w"
            android:layout_weight="2"
            android:gravity="right"
            android:padding="@dimen/margin_small"
            android:text="@string/str_sample_datetime"
            android:textSize="@dimen/text_size_10"
            android:textColor="@color/txt_gray_light"/>
    </LinearLayout>

</LinearLayout>


