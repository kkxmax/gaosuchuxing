<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color_white">

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/topbar_height"
        layout="@layout/nav_bar" />

    <ListView
        android:id="@+id/listView"
        style="@style/layout_m0"
        android:divider="@color/color_transparent"
        android:dividerHeight="0dp">
    </ListView>

    <View style="@style/splite_line_gray"/>
    <LinearLayout
        style="@style/layout_mw"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_normal"
        android:paddingRight="@dimen/margin_normal"
        android:paddingTop="@dimen/margin_small"
        android:paddingBottom="@dimen/margin_small">
        <EditText
            android:id="@+id/edit_search"
            style="@style/layout_0m"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:background="@drawable/round_gray_white"
            android:drawableLeft="@drawable/icon_input"
            android:padding="@dimen/margin_normal"
            android:drawablePadding="@dimen/margin_normal"
            android:textColor="@color/txt_gray"
            android:textColorHint="@color/txt_gray_light"
            android:textSize="@dimen/text_size_14"
            android:hint="@string/think" />
    </LinearLayout>
</LinearLayout>