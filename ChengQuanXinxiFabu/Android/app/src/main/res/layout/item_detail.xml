<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:padding="@dimen/margin_normal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/image_avatar_width"
            android:layout_height="@dimen/image_avatar_height">
            <com.beijing.chengxin.ui.view.CircleImageView
                android:id="@+id/img_avatar"
                android:layout_width="@dimen/image_avatar_width"
                android:layout_height="@dimen/image_avatar_width"
                android:src="@drawable/no_image"/>
            <ImageView
                android:id="@+id/img_blank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/blank_enterprise"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <LinearLayout
            style="@style/layout_0w"
            android:layout_marginLeft="@dimen/margin_normal"
            android:orientation="vertical">

            <LinearLayout
                style="@style/layout_mw"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_name"
                    style="@style/layout_ww"
                    android:text="@string/app_name"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/txt_dark"/>
                <Button
                    android:id="@+id/btn_state"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="@dimen/margin_small"
                    android:background="@drawable/round_rect_bg_no_border_blue"
                    android:textColor="@color/color_main_blue"
                    android:textSize="@dimen/text_size_12"
                    android:text="互联网"/>
                <View style="@style/layout_0m" />
                <ToggleButton
                    android:id="@+id/btn_follow"
                    android:layout_width="60dp"
                    android:layout_height="24dp"
                    android:background="@drawable/btn_follow"
                    android:textOn="@string/str_followed"
                    android:textOff="@string/str_follow"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/txt_gray_white"/>
            </LinearLayout>

            <LinearLayout
                style="@style/layout_mw"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="horizontal">
                <TextView
                    style="@style/layout_ww"
                    android:text="@string/str_chengxin_id"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/txt_dark"/>
                <TextView
                    android:id="@+id/txt_chengxin_id"
                    style="@style/layout_ww"
                    android:layout_marginStart="@dimen/margin_small"
                    android:text="@string/str_sample"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/txt_dark"/>
            </LinearLayout>

            <LinearLayout
                style="@style/layout_mw"
                android:layout_marginTop="@dimen/margin_normal"
                android:orientation="horizontal">
                <TextView
                    style="@style/layout_ww"
                    android:minWidth="60dp"
                    android:gravity="center"
                    android:background="@drawable/round_rect_blue_white"
                    android:padding="@dimen/margin_small"
                    android:text="@string/str_main_comedity"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/color_main_blue"/>
                <TextView
                    android:id="@+id/txt_main_comedity"
                    style="@style/layout_ww"
                    android:layout_marginStart="@dimen/margin_small"
                    android:text="@string/str_sample"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/txt_dark"/>
            </LinearLayout>

            <LinearLayout
                style="@style/layout_mw"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="horizontal">
                <TextView
                    style="@style/layout_ww"
                    android:minWidth="60dp"
                    android:gravity="center"
                    android:background="@drawable/round_rect_blue_white"
                    android:padding="@dimen/margin_small"
                    android:text="@string/str_item"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/color_main_blue"/>
                <TextView
                    android:id="@+id/txt_item"
                    style="@style/layout_ww"
                    android:layout_marginStart="@dimen/margin_small"
                    android:text="@string/str_sample"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/txt_dark"/>
            </LinearLayout>

            <LinearLayout
                style="@style/layout_mw"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="horizontal">
                <TextView
                    style="@style/layout_ww"
                    android:minWidth="60dp"
                    android:gravity="center"
                    android:background="@drawable/round_rect_blue_white"
                    android:padding="@dimen/margin_small"
                    android:text="@string/str_serve"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/color_main_blue"/>
                <TextView
                    android:id="@+id/txt_serve"
                    style="@style/layout_ww"
                    android:layout_marginStart="@dimen/margin_small"
                    android:text="@string/str_sample"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/txt_dark"/>
            </LinearLayout>

            <LinearLayout
                style="@style/layout_mw"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="horizontal">
                <TextView
                    style="@style/layout_ww"
                    android:minWidth="60dp"
                    android:gravity="center"
                    android:background="@drawable/round_rect_orange_white"
                    android:padding="@dimen/margin_small"
                    android:text="@string/str_suggest_man"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/color_orange"/>
                <TextView
                    android:id="@+id/txt_suggest_man"
                    style="@style/layout_ww"
                    android:layout_marginStart="@dimen/margin_small"
                    android:text="@string/str_sample"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/txt_dark"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View style="@style/splite_line_gray"
        android:layout_marginTop="@dimen/margin_normal_top"
        android:layout_marginBottom="@dimen/margin_normal"/>

    <LinearLayout
        style="@style/layout_mw"
        android:orientation="horizontal">
        <LinearLayout
            style="@style/layout_0w"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                style="@style/layout_ww"
                android:padding="@dimen/margin_small"
                android:text="@string/str_chengxin_rate"
                android:textSize="@dimen/text_size_10"
                android:textColor="@color/txt_gray_light"/>
            <TextView
                android:id="@+id/txt_chengxin_rate"
                style="@style/layout_ww"
                android:text="@string/str_sample"
                android:textSize="@dimen/text_size_10"
                android:textColor="@color/color_main_blue"/>
        </LinearLayout>
        <LinearLayout
            style="@style/layout_0w"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                style="@style/layout_ww"
                android:padding="@dimen/margin_small"
                android:text="@string/str_like_count"
                android:textSize="@dimen/text_size_10"
                android:textColor="@color/txt_gray_light"/>
            <TextView
                android:id="@+id/txt_like_count"
                style="@style/layout_ww"
                android:text="@string/str_sample"
                android:textSize="@dimen/text_size_10"
                android:textColor="@color/color_main_blue"/>
        </LinearLayout>
        <LinearLayout
            style="@style/layout_0w"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                style="@style/layout_ww"
                android:padding="@dimen/margin_small"
                android:text="@string/str_eval_count"
                android:textSize="@dimen/text_size_10"
                android:textColor="@color/txt_gray_light"/>
            <TextView
                android:id="@+id/txt_eval_count"
                style="@style/layout_ww"
                android:text="@string/str_sample"
                android:textSize="@dimen/text_size_10"
                android:textColor="@color/color_main_blue"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>


