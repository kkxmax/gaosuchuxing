<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_gray_f5"
    android:orientation="vertical">

    <LinearLayout
        style="@style/layout_mw"
        android:padding="@dimen/margin_normal"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/image_avatar_width"
            android:layout_height="@dimen/image_avatar_width"
            android:background="@drawable/no_image"/>

        <LinearLayout
            style="@style/layout_0w"
            android:layout_marginLeft="@dimen/margin_normal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_eval_content"
                style="@style/layout_mw"
                android:layout_marginStart="@dimen/margin_small"
                android:text="@string/str_sample_eval"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/txt_gray"/>

            <TextView
                android:id="@+id/txt_time"
                style="@style/layout_mw"
                android:layout_marginTop="@dimen/margin_normal_below"
                android:padding="@dimen/margin_small"
                android:text="@string/str_sample_date"
                android:textSize="@dimen/text_size_10"
                android:textColor="@color/txt_gray_light"/>
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/splite_line_gray"
        android:background="@color/color_gray_e5"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginBottom="@dimen/margin_tiny"/>

</LinearLayout>