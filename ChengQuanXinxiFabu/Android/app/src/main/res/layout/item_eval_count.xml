<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/layout_mw"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_normal"
    android:paddingRight="@dimen/margin_normal"
    android:paddingBottom="@dimen/margin_normal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_normal"
        android:orientation="horizontal">

        <View style="@style/space_vertical" />

        <TextView
            android:id="@+id/btn_all_eval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_small"
            android:paddingBottom="@dimen/margin_small"
            android:paddingLeft="@dimen/margin_normal"
            android:paddingRight="@dimen/margin_normal"
            android:background="@drawable/round_orange_gradient"
            android:text="@string/all_2000"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/color_white"
            android:gravity="center"/>

        <View style="@style/space_vertical" />

        <TextView
            android:id="@+id/btn_front_eval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_small"
            android:paddingBottom="@dimen/margin_small"
            android:paddingLeft="@dimen/margin_normal"
            android:paddingRight="@dimen/margin_normal"
            android:background="@drawable/round_gray_white"
            android:text="@string/front_eval_1000"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/txt_gray_light"
            android:gravity="center"/>


        <View style="@style/space_vertical" />

        <TextView
            android:id="@+id/btn_back_eval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_small"
            android:paddingBottom="@dimen/margin_small"
            android:paddingLeft="@dimen/margin_normal"
            android:paddingRight="@dimen/margin_normal"
            android:background="@drawable/round_gray_white"
            android:text="@string/backword_eval"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/txt_gray_light"
            android:gravity="center"/>
        <View style="@style/space_vertical" />

    </LinearLayout>

</LinearLayout>